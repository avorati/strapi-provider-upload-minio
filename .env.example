# ===========================================
# MINIO UPLOAD PROVIDER - Configuration
# ===========================================
# Copy this file to .env or .env.local and fill in your actual values
# 
# This file serves as a template for configuring the MinIO provider.
# Never commit your actual .env file with real credentials!

# MinIO Server Configuration
# You can use either MINIO_HOST or MINIO_ENDPOINT (both work the same way)
MINIO_HOST=localhost
# Alternative: MINIO_ENDPOINT=localhost
# Port: default is 9000 for HTTP, 443 for HTTPS (when MINIO_USE_SSL=true)
# If not specified, port will be automatically set based on MINIO_USE_SSL
MINIO_PORT=9000
MINIO_USE_SSL=false
# Reject unauthorized SSL certificates (default: true)
# Set to false for self-signed certificates in dev/hmg environments
# ⚠️ WARNING: Setting to false reduces security. Only use in non-production environments!
# MINIO_REJECT_UNAUTHORIZED=false

# MinIO Credentials
# ⚠️ IMPORTANT: Replace with your actual MinIO credentials
MINIO_ACCESS_KEY=your-access-key-here
MINIO_SECRET_KEY=your-secret-key-here

# MinIO Bucket Configuration
MINIO_BUCKET=strapi-uploads
MINIO_FOLDER=cms
# Note: MINIO_REGION is not currently used by the provider
# MINIO_REGION=us-east-1

# Provider Options
# Set to true to enable private file uploads (requires signed URLs for access)
MINIO_PRIVATE=false
# Expiry time for signed URLs in seconds (default: 604800 = 7 days)
MINIO_EXPIRY=604800
# Connection timeout in milliseconds (default: 60000 = 60 seconds)
MINIO_CONNECT_TIMEOUT=60000
# Request timeout in milliseconds (optional, for future use)
# MINIO_REQUEST_TIMEOUT=300000
# Enable verbose debug logging (default: false)
# When enabled, logs detailed information about all operations including timing, metadata, and internal state
MINIO_DEBUG=false

# ===========================================
# Example for Docker/MinIO Setup
# ===========================================
# If using Docker Compose with MinIO, you might also need:
# MINIO_ROOT_USER=minioadmin
# MINIO_ROOT_PASSWORD=minioadmin

